@model DoAn_Mioto.Models.NhanVien

@{
    ViewBag.Title = "DetailsEmployee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    h2 {
        text-align: center;
    }
    .form-horizontal {
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    div.dl-horizontal {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
    }
    dl.dl-horizontal dt {
        font-weight: bold;
        width: 30%;
        display: inline-block;
        padding: 8px 0;
        vertical-align: top;
    }
    dl.dl-horizontal dd {
        display: inline-block;
        width: 60%;
        margin-left: 0;
        padding: 8px 0;
        color: #333;
    }
    dl.dl-horizontal dt, dl.dl-horizontal dd {
        padding-bottom: 5px;
        border-bottom: 1px solid #e9e9e9;
    }
    .btn-default {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

</style>
<h2>Thông tin chi tiết</h2>
<div class="form-horizontal">
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Ten)*@
